<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

   <PreferenceCategory
       android:title="@string/preference_sound">
       <VolumePreference
           android:title="Alarm volume"
           android:summary="Set the volume of alarms"
           android:dialogTitle="Alarm volume"
           android:persistent="false"
           android:streamType="alarm"
           android:icon="@drawable/ic_volume_up_white_24dp" />
   </PreferenceCategory>

    <PreferenceCategory
        android:title="Languages">
        <ListPreference
            android:key="languages_listPreference"
            android:summary="Set the language in application"
            android:title="Change language"
            android:entries="@array/listArray_ofLanguages"
            android:entryValues="@array/listValues_ofLanguages"
            android:dialogTitle="languages"
            android:negativeButtonText="@string/pref_back"/>
        </PreferenceCategory>
</PreferenceScreen>
