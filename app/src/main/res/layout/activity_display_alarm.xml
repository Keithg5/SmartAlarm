<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mrkostua.mathalarm.alarms.mathAlarm.displayAlarm.DisplayAlarmActivity">

    <data>

        <variable
            name="viewModel"
            type="com.mrkostua.mathalarm.alarms.mathAlarm.displayAlarm.DisplayAlarmViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rlDisplayAlarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#36584f"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/bStopAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_circle_bstop"
            android:onClick="bStopAlarmOnClickListener"
            android:text="@string/displayAlarmActivity_bStopAlarm"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:theme="@style/displayAlarmButtonsStyle"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bSnoozeAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bStopAlarm"
            android:background="@drawable/shape_circle_bsnooze"
            android:onClick="bSnoozeAlarmOnClickListener"
            android:text="@string/displayAlarmActivity_bSnooze"
            android:textColor="@color/snoozeButtonColor"
            android:textSize="20sp"
            android:theme="@style/displayAlarmButtonsStyle"
            android:visibility="invisible" />

        <ScrollView
            android:id="@+id/scrollViewContainerStartedAlarmMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tvStartedAlarmMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.userTextMessage}"
                android:textColor="@color/displayMessageTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />
        </ScrollView>
    </RelativeLayout>
</layout>

