<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mrkostua.mathalarm.alarms.mathAlarm.displayAlarm.DisplayAlarmActivity">

    <data>

        <variable
            name="viewModel"
            type="com.mrkostua.mathalarm.alarms.mathAlarm.displayAlarm.DisplayAlarmViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rlDisplayAlarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#36584f"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/bStopAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_circle_bstop"
            android:onClick="bStopAlarmOnClickListener"
            android:text="@string/displayAlarmActivity_bStopAlarm"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:theme="@style/displayAlarmButtonsStyle" />

        <Button
            android:id="@+id/bSnoozeAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bStopAlarm"
            android:background="@drawable/shape_circle_bsnooze"
            android:onClick="bSnoozeAlarmOnClickListener"
            android:text="@string/displayAlarmActivity_bSnooze"
            android:textColor="@color/snoozeButtonColor"
            android:textSize="20sp"
            android:theme="@style/displayAlarmButtonsStyle" />

        <ScrollView
            android:id="@+id/scrollViewContainerStartedAlarmMessage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tvStartedAlarmMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.userTextMessage}"
                android:textColor="@color/displayMessageTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />
        </ScrollView>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/shape_oval"
            android:padding="10dp"
            android:text="1" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="173dp"
            android:background="@drawable/shape_oval"
            android:padding="10dp"
            android:text="3" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="186dp"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:background="@drawable/shape_oval"
            android:padding="10dp"
            android:text="2" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="243dp"
            android:background="@drawable/shape_oval"
            android:padding="10dp"
            android:text="4" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp"
            android:layout_marginTop="238dp"
            android:background="@drawable/shape_oval"
            android:padding="10dp"
            android:text="5" />

    </RelativeLayout>
</layout>

