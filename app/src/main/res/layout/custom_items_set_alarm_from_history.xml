<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:text="//"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHistoryAlarmName"
        android:layout_alignBottom="@+id/ibHistoryDeleteAlarm"
        android:layout_toLeftOf="@+id/ibHistoryDeleteAlarm"
        android:layout_toStartOf="@+id/ibHistoryDeleteAlarm"
        android:layout_alignParentTop="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>



    <TextView
        android:text="//"
        android:textColor="#fff"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHistoryAlarmHour"
        android:layout_alignBottom="@+id/bHistorySetAlarm"
        android:layout_alignParentTop="true"
        android:paddingLeft="30dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="//"
        android:textColor="#fff"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHistoryAlarmMinute"
        android:paddingRight="30dp"
        android:layout_marginRight="10dp"/>


</LinearLayout>