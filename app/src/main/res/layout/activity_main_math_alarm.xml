<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/bCreateAlarm"
        android:text="Create"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_bcreate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="bCreateMathAlarm_ClickMethod"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow>

            <TextView
                android:layout_column="2"
                android:text="hour:00 minute:00"
                android:gravity="center"
                android:padding="3dip"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:id="@+id/tvSetTime"
                />

            <Button
                android:layout_width="match_parent"
                android:text="Change Time"
                android:layout_column="2"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/bSetTime"
                android:onClick="bSetAlarmTime_ClickMethod"/>

        </TableRow>

        <Button
    android:layout_height="30dp"
    android:layout_width="wrap_content"
    android:background="#f79e9e"
    android:id="@+id/b1Line"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvChooseMusic"
                android:layout_column="2"
                android:text="default: Rooster alarm"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/bChooseMusic"
                android:layout_width="wrap_content"
                android:text="Choose music"
                android:layout_column="2"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:onClick="bChooseMusic_ClickMethod"
                 />

        </TableRow>

        <Button
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:background="#f79e9e"
            android:id="@+id/b2Line"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvChangeMessage"
                android:layout_column="2"
                android:text="Good morning sir"
                android:padding="20dip"
                android:gravity="center"
                android:textColor="@color/white"
                 />

            <Button
                android:id="@+id/bChangeMessageForAlarm"
                android:layout_width="wrap_content"
                android:text="Change message"
                android:layout_column="2"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:onClick="bAlarmMessageText_OnClickListener"
                 />
        </TableRow>

        <Button
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:background="#f79e9e"
            android:id="@+id/b3Line"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvChangeComplexity"
                android:layout_column="2"
                android:text="default (Easy)"
                android:paddingBottom="40dip"
                android:textColor="@color/white"
                android:gravity="center"
                 />

            <Button
                android:id="@+id/bChangeAlarmComplexity"
                android:layout_width="wrap_content"
                android:text="Change complexity"
                android:layout_column="2"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:onClick="bChangeAlarmComplexity_ClickMethod"
                 />
        </TableRow>

        <Button
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:background="#f79e9e"
            android:id="@+id/b4Line"/>

    </TableLayout>
</RelativeLayout>