<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorAlertDialogListItem">@color/alertDialogMainMathAlarmTextPrimaryColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
    <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowBackground">@null</item>
    <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
    <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
</style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Preference_style">
        <item name="android:selectable">true</item>
    </style>


    <style name="alertDialogMainMathAlarmStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/alertDialogMainMathAlarmAccentColor</item>
        <item name="android:textColorPrimary">@color/activity_main_math_alarm_textColorWhite</item>
        <item name="android:colorBackground">@color/alertDialogMainMathAlarmBackgroundColor</item>
        <item name="textColorAlertDialogListItem">@color/alertDialogMainMathAlarmTextColorAlertDialogListItem</item>
        <item name="android:textColorSecondary">@color/alertDialogMainMathAlarmTextColorSecondary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:windowTitleStyle">@style/alertDialogTitleStyle</item>
    </style>

    <style name="alertDialogTitleStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/alertDialogMainMathAlarmTitleColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dayOfTheWeek_TextTheme" parent="android:Theme">
    <item name="android:textViewStyle">@style/dayOfWeekStyle</item>
</style>
    <style name="dayOfWeekStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/day_of_week</item>
        <item name="android:textSize">@dimen/day_of_week_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ChosenDayOfTheWeek_TextTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/ChosenDayOfWeekStyle</item>
    </style>
    <style name="ChosenDayOfWeekStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/day_of_week_chosen</item>
        <item name="android:textSize">@dimen/day_of_week_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="alarmTime_TextTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/alarmTimeStyle</item>
    </style>
    <style name="alarmTimeStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/main_button_time</item>
        <item name="android:textSize">@dimen/alarm_time_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HelperDark_TextTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/helperDarkStyle</item>
        <!--todo here put style e.g. for some Buttons related to Helper-->
    </style>

    <style name="helperDarkStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/helperTextMessages</item>
        <item name="android:textSize">@dimen/helperTextMessages_size</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="HelperLight_TextTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/helperLightStyle</item>
        <!--todo here put style e.g. for some Buttons related to Helper-->
    </style>

    <style name="helperLightStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/helperTextMessages</item>
        <item name="android:textSize">@dimen/helperTextMessages_size</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
